	/*
    Â©2019 - Tyler Stansfield Jaggers
    GOAL: Display an Array of Integers on a single line without converting array into another structure
    INPUT: Array of Integers
    OUTPUT: Void return -> System output into the console etc. 
  
  */
  
  
  public static void displayArray(int[] arr) {
		

		System.out.print("\n[ ");
		
		for (int i = 0; i < arr.length; i++) {
			if (i == arr.length - 1) {
				System.out.print(arr[i]);
			} else {
				System.out.print(arr[i] + ", ");
			}
		}
		
		System.out.print(" ]\n");
	}
